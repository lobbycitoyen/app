.container-fluid
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
					span.sr-only Toggle navigation
					|         
					span.icon-bar
					|         
					span.icon-bar
					|         
					span.icon-bar
					|       
				a.navbar-brand(href='/#!') #{locals.site_title}
				
			ul.nav.navbar-nav.navbar-right
				li(ng-if="!user_logged")
					a(ng-href="#{root_url}:#{port}/login") {{render_config.i18n.CUSTOM.USER.login}}
					a(ng-href="#{root_url}:#{port}/register") {{render_config.i18n.CUSTOM.USER.register}}

				li(ng-if="user_logged") 
					span {{user_logged.username}} |
						a(ng-href="#{root_url}:#{port}/me/account") Mon compte	

						



	ol.breadcrumb
		li 
			a(href="/#!") home
		li
			a.active(href="/#!") {{render_config.i18n.CUSTOM.USER.login}}

			
	form(name="myForm" , novalidate class="css-form")
		.form-group(style="color:red") 
			label {{errors}}

		.form-group
			label(for='username') username :      
			input#email.form-control(required  type="text",  ng-model= "username",  name="username")
		.form-group
			label(for='username') mot de passe :      
			input#email.form-control(required type="password", ng-model= "password",  name="password")

		a.btn.btn-default(ng-if="myForm.$valid == true" , ng-click="checklogin()") ok
	
		h3 {{render_config.i18n.CUSTOM.USER.no_account_yet}}
		a(href="{{register_url}}") {{render_config.i18n.CUSTOM.USER.register}}
		// ou avec facebook

